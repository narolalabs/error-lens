{
    "name": "narolalabs/error-lens",
    "description": "See, Understand, and Handle Laravel Errors using ErrorLens",
    "keywords": [
        "narolalabs",
        "laravel",
        "error-lens"
    ],
    "homepage": "https://github.com/narolalabs/error-lens",
    "license": "MIT",
    "authors": [
        {
            "name": "Narola Labs",
            "email": "narola.packages@narola.email",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0|^8.1",
        "spatie/laravel-package-tools": "^1.10.0|^1.14.0",
        "illuminate/contracts": "^8.0|^9.*|^10.*",
        "jenssegers/agent": "^2.6",
        "ramsey/uuid": "^4.2|^4.7"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.0|^7.8",
        "orchestra/testbench": "^6.34.0|^8.8",
        "laravel/pint": "^1.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Narolalabs\\ErrorLens\\": "src/",
            "Narolalabs\\ErrorLens\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Narolalabs\\ErrorLens\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-error-lens --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "post-install-cmd": [
            "@php artisan vendor:publish --tag=error-lens-migrations",
            "@php artisan vendor:publish --tag=error-lens-assets",
            "@php artisan vendor:publish --tag=error-lens-views",
            "@php artisan vendor:publish --tag=error-lens-config",
            "@php artisan vendor:publish --tag=error-lens-seeds"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=error-lens-migrations",
            "@php artisan vendor:publish --tag=error-lens-assets",
            "@php artisan vendor:publish --tag=error-lens-views",
            "@php artisan vendor:publish --tag=error-lens-config",
            "@php artisan vendor:publish --tag=error-lens-seeds"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Narolalabs\\ErrorLens\\ErrorLensServiceProvider"
            ],
            "aliases": {
                "ErrorLens": "Narolalabs\\ErrorLens\\Facades\\ErrorLens"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}